<Control xmlns="https://spacestation14.io" HorizontalAlignment="Center" VerticalAlignment="Center">
    <PanelContainer MaxSize="500 250">
        <VBoxContainer Margin="15 15 15 15" HorizontalExpand="True" VerticalExpand="True" SeparationOverride="5">
            <Label Text="Robust Mafia" Align="Center" StyleClasses="LabelGame"></Label>
            <Control VerticalExpand="True"></Control>
            <LineEdit Name="UsernameLineEdit" PlaceHolder="Username" MaxWidth="150"></LineEdit>
            <LineEdit Name="AddressLineEdit" PlaceHolder="Server Address" Text="localhost" MaxWidth="150"></LineEdit>
            <Control></Control>
            <Button Name="ConnectButton" Text="Connect" TextAlign="Center" MaxWidth="75"></Button>
        </VBoxContainer>
    </PanelContainer>
</Control>
